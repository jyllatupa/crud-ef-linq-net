@* @model CRUD_EF_LINQ.Models.ProductsViewModel *@

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <a class="btn btn-primary" asp-action="Registrar">Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.listProductoVM)
                    {
                        <tr>
                            <td>@item.CodProducto</td>
                            <td>@item.Descripcion</td>
                            <td>@item.Precio</td>
                            <td>@item.Stock</td>
                            <td>
                                <a asp-action="Editar" asp-route-codproducto="@item.CodProducto" class="btn btn-secondary btn-sm">Editar</a>
                                <a asp-action="Delete" asp-route-codproducto="@item.CodProducto" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
